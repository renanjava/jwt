generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  cpf       String   @unique
  phone     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id       String    @id @default(uuid())
  name     String
  quantity Int
  price    Int
  Payment  Payment[]
}

model Payment {
  id          String        @id @default(uuid())
  external_id String        @unique
  status      PaymentStatus
  payment_url String
  paid_amount Int?
  paid_date   DateTime?
  amount      Int
  payment_fee Int
  return_url  String
  success_url String
  method      String        @default("PIX")
  dev_mode    Boolean
  product_id  String
  product     Product       @relation(fields: [product_id], references: [id])
}

enum Role {
  USER
  ADMIN
}

enum PaymentStatus {
  PAID
  PENDING
  EXPIRED
  CANCELLED
  REFUNDED
}
